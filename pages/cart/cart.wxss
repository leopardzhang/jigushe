/* pages/cart/cart.wxss */

page {
  padding-bottom: 36px;
}

.content {
  padding-left: 25rpx;
  padding-right: 25rpx;
}

.check_box, .close_box {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  flex: 0 0 24px;
}

.check_box image, .close_box image {
  width: 24px;
  height: 24px;
}

.main_box {
  flex: 1;
  margin: 0 12px;
}

.cart_list .li>.flex {
  padding-top: 17px;
  padding-bottom: 20px;
}

.cart_list .li .product_img {
  width: 80px;
  height: 80px;
}

.cart_list .li .product_name {
  font-size: 16px;
  font-weight: 700;
}

.cart_list .li .prodcut_text {
  font-size: 12px;
}

.cart_list .li .product_img_box {
  width: 80px;
  height: 80px;
  margin-right: 11px;
}

.cart_list .li .price {
  color: #ef831b;
  line-height: 1;
  flex: 0 0 5em;
}

.num_box {
  margin-left: 45rpx;
}

.num_box .btn {
  width: 20px;
  height: 20px;
}

.num_box .btn image {
  width: 20px;
  height: 20px;
}

.num_box input {
  width: 30px;
  height: 20px;
  text-align: center;
  line-height: 20px;
}

.product_info {
  flex: 1;
}

@media ( min-resolution : 2dppx ) {
  .cart_list .li.border1px::after {
    content: '';
    display: block;
    width: 100%;
    height: 1px;
    background: #000;
    transform: scale(1, 0.5);
  }
}

@media ( min-resolution : 3dppx ) {
  .cart_list .li.border1px::after {
    content: '';
    display: block;
    width: 100%;
    height: 1px;
    background: #000;
    transform: scale(1, 0.33);
  }
}

.cart_list .li.border1px:last-of-type::after {
  display: none;
}

.footer {
  position: fixed;
  z-index: 20;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #000;
}

.footer>.flex {
  flex-direction: row-reverse;
  justify-content: flex-start;
  height: 36px;
}

.footer .btn_submit {
  height: 36px;
  line-height: 36px;
  font-size: 12px;
  color: #fff;
  width: 217rpx;
  flex: 0 0 217rpx;
  background: #f2831a;
  border-radius: 0;
  border: none;
}

.footer .btn_submit::after {
  display: none;
}

.btn_submit.un {
  background: #ccc;
}

.check_all {
  flex: 0 0 134rpx;
  margin-left: 44rpx;
  flex-direction: row;
}

.check_all .btn, .check_all .btn image {
  width: 24px;
  height: 24px;
}

.check_all .btn.checked {
  background: url('https://xcx.longcai666.com/xiaochengxu/api/images/r.png') no-repeat;
  background-size: 100% auto;
  margin-right: 9px;
}

.check_all .btn:not(.checked) {
  margin-right: 7px;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.statements {
  height: 36px;
  line-height: 36px;
  color: #fff;
  flex: 1;
}

.full_cost {
  line-height: 36px;
}

.c666 {
  color: #666;
}

.fz16 {
  font-size: 16px;
}

.null {
  line-height: 2;
  padding-top: 90px;
}

.go_to_buy {
  width: 200rpx;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
  border: 1px solid #f2831a;
  border-radius: 4px;
  color: #f2831a;
  display: inline-block;
}
